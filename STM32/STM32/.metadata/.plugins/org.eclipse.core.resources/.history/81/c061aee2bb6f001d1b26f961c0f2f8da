#include "stm32f103x6.h";
#include "GPIO.h"

void mywait(uint8_t x)
{
	for(uint8_t i=0; i<x; i++)
	{
		for(uint8_t j=0; j<255; j++);
	}

}

/* RCC initliztion */
void RCC_Init()
{
	GPIOA_RCC_CLK_ENABLE();
	GPIOB_RCC_CLK_ENABLE();
}


void GPIO_Init()
{

	GPIO_Pinconfig_t PINA1;
	PINA1.PinNum =GPIO_PIN1;
	PINA1.PinMode= GPIO_MODE_INPUT_FLOAT;
	PINA1.PinSpeed = GPIO_SPEED_RSP;
	GPIO_Pinconfig_t PINA13 = {GPIO_PIN13, GPIO_MODE_INPUT_FLOAT, GPIO_SPEED_RSP};
	GPIO_Pinconfig_t PINB1 = {GPIO_PIN1, GPIO_MODE_OUTPUT_PP, GPIO_SPEED_10M};
	GPIO_Pinconfig_t PINB13 = {GPIO_PIN13, GPIO_MODE_OUTPUT_OD, GPIO_SPEED_10M};

	MCAL_GPIO_Init(GPIOB , &PINB1);
	MCAL_GPIO_Init(GPIOB , &PINB14);
	MCAL_GPIO_Init(GPIOA , &PINA1);
	MCAL_GPIO_Init(GPIOA , &PINA13);
}
int main(void)
{
	RCC_Init();
	GPIO_Init();
	/*Configure pins here*/


	/* Loop forever */
	while(1)
	{
		if(LOW == MCAL_GPIO_ReadPin(GPIOA,GPIO_PIN1))
		{
			/* Single press*/
			MCAL_GPIO_TogglePin(GPIOB,GPIO_PIN1);
			//while(LOW == MCAL_GPIO_ReadPin(GPIOA,GPIO_PIN1));
		}

		if(HIGH == MCAL_GPIO_ReadPin(GPIOA,GPIO_PIN13))
		{
			/* Multi press*/
			MCAL_GPIO_TogglePin(GPIOB,GPIO_PIN13);
		}

		mywait(2);
	}
}
